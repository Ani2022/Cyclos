				driver.findElement(By.xpath("//li[@id='menu3']/span[@class='menuText']")).click();

			
				WebElement book1= driver.findElement(By.xpath("//select[@name='query(transferType)']"));
			
				 Robot robot = new Robot();	
		           Thread.sleep(2000);	
